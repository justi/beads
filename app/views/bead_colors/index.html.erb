<h1>Listing Bead Colors</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bead_colors.each do |bead_color| %>
      <tr>
        <td><%= link_to 'Show', bead_color %></td>
        <td><%= link_to 'Edit', edit_bead_color_path(bead_color) %></td>
        <td><%= link_to 'Destroy', bead_color, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

