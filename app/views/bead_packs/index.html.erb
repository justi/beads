<p id="notice"><%= notice %></p>

<h1>Listing Bead Packs</h1>

<table>
  <thead>
    <tr>
      <th>Count</th>
      <th>Type</th>
      <th>Size</th>
      <th>Colors</th>
      <th>Name</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bead_packs.each do |bead_pack| %>
      <tr>
        <td><%= bead_pack.count %></td>
        <td><%= bead_pack.bead_type %></td>
        <td><%= bead_pack.size %></td>
        <td><%= bead_pack.name %></td>
        <td><%= image_tag(bead_pack.picture_url, width: 60) if bead_pack.picture.present? %></td>
        <td><%= link_to 'Show', bead_pack %></td>
        <td><%= link_to 'Edit', edit_bead_pack_path(bead_pack) %></td>
        <td><%= link_to 'Destroy', bead_pack, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

