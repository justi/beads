<p id="notice"><%= notice %></p>

<h1>Listing Bead Types</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bead_types.each do |bead_type| %>
      <tr>
        <td><%= bead_type.name %></td>
        <td><%= link_to 'Show', bead_type %></td>
        <td><%= link_to 'Edit', edit_bead_type_path(bead_type) %></td>
        <td><%= link_to 'Destroy', bead_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

